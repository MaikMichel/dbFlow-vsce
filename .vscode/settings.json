// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#2fd6ea",
        "activityBar.activeBorder": "#e817d1",
        "activityBar.background": "#2fd6ea",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#e817d1",
        "activityBarBadge.foreground": "#e7e7e7",
        "statusBar.background": "#15bdd1",
        "statusBar.foreground": "#15202b",
        "statusBarItem.hoverBackground": "#1093a3",
        "titleBar.activeBackground": "#15bdd1",
        "titleBar.activeForeground": "#15202b",
        "titleBar.inactiveBackground": "#15bdd199",
        "titleBar.inactiveForeground": "#15202b99"
    },
    "peacock.color": "#15bdd1",
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true
}