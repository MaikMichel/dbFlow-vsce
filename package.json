{
	"name": "dbflow",
	"publisher" : "MaikMichel",
	"icon": "images/icon.png",
	"license": "LICENSE",
	"repository": {
			"type": "git",
			"url": "https://github.com/MaikMichel/dbFlow-vsce"
	},
  "bugs": "https://github.com/MaikMichel/dbFlow-vsce/issues",
	"displayName": "dbFlow-vsce",
	"description": "An extension to let you compile PL/SQL, Javascript and CSS towards your APEX Instance",
	"version": "0.1.1",
	"engines": {
		"vscode": "^1.55.0"
	},
	"preview": true,
  "author": {
    "name": "Maik Michel"
  },
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:dbFlow.*",
		"workspaceContains:apply.env"
	],
	"main": "./out/extension.js",
	"contributes": {
		"taskDefinitions": [
			{
				"type": "dbFlow"
			}
		],
		"problemMatchers": [
			{
				"name": "dbflow-plsql",
				"owner": "external",
				"fileLocation": [
					"relative",
					"${workspaceFolder}"
				],
				"pattern": [
					{
						"regexp": "(.*) (.*?):(\\d+):(\\d+) (.*)",
						"severity": 1,
						"line": 3,
						"column": 4,
						"file": 2,
						"message": 5,
						"loop": true
					}
				]
			}
		],
		"commands": [
			{
				"command": "dbFlow.compileFile",
				"title": "Compile current File",
				"category": "dbFlow",
				"when": "inDbFlowProject && resourceExtname =~ /.sql|.SQL|.pks|.PKS|.pkb|.PKB/"
			},
			{
				"command": "dbFlow.exportAPEX",
				"title": "Export APEX Application",
				"category": "dbFlow",
				"when": "inDbFlowProject"
			},
			{
				"command": "dbFlow.exportREST",
				"title": "Export REST Module",
				"category": "dbFlow",
				"when": "inDbFlowProject"
			},
			{
				"command": "dbFlow.addREST",
				"title": "Add REST Module to export",
				"category": "dbFlow",
				"when": "inDbFlowProject"
			},
			{
				"command": "dbFlow.addAPP",
				"title": "Add APEX Application to export",
				"category": "dbFlow",
				"when": "inDbFlowProject"
			}
		],
		"keybindings": [
			{
				"command": "dbFlow.compileFile",
				"key": "ctrl+alt+b",
				"mac": "ctrl+alt+b"
			},
			{
				"command": "dbFlow.exportAPEX",
				"key": "ctrl+alt+e",
				"mac": "ctrl+alt+e"
			},
			{
				"command": "dbFlow.exportREST",
				"key": "ctrl+alt+r",
				"mac": "ctrl+alt+r"
			}
		],
		"configuration": [
			{
				"type": "object",
				"title": "dbFlow",
				"properties": {
					"dbFlow.cliToUseForCompilation": {
						"type": "string",
						"default": "SQL*Plus",
						"enum": [
							"SQL*Plus",
							"SQLcl"
						],
						"description": "Which CLI should be used to compile your source to specified database. Please make sure to set binaries to path",
						"scope": "window"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.55.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"esbuild": "^0.11.15",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"dotenv": "^8.2.0",
		"handlebars": "^4.7.7",
		"terser": "^5.6.1",
		"uglifycss": "0.0.29"
	}
}
